<Page x:Class="TourTour.View.ToursPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TourTour.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="ToursPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Content="Back" Click="ButtonBack_Click" Height="30" Width="94"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Name="ButtonNewTour" Content="New tour" Click="ButtonNewTour_Click" Height="30" Width="94"  VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"/>


        <Grid Name="gridAddTour" Visibility="Collapsed" Grid.ColumnSpan="7" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="Name: " Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right"  Height="23"/>
            <Label Content="Mileage: " Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right"  Height="23"/>
            <Label Content="Transfer cost: " Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right"  Height="23"/>
            <Label Content="Avia cost: " Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Right"  Height="23"/>
            <Label Content="Availability: " Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Right"  Height="23"/>
            <Label Content="Description: " Grid.Column="1" Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Right"  Height="23"/>
            <Label Content="Hotel: " Grid.Column="1" Grid.Row="8" VerticalAlignment="Center" HorizontalAlignment="Right"  Height="23"/>

            <TextBox Name="TextBoxTourName" Grid.Column="2" Grid.Row="1"  Height="20" VerticalAlignment="Center" Grid.ColumnSpan="3" />
            <TextBox Name="TextBoxMileage" Grid.Column="2" Grid.Row="2"  Height="20" VerticalAlignment="Center" Grid.ColumnSpan="3" />
            <TextBox Name="TextBoxTransferCost" Grid.Column="2" Grid.Row="3" Height="20" VerticalAlignment="Center" Grid.ColumnSpan="3" />
            <TextBox Name="TextBoxAviaCost" Grid.Column="2" Grid.Row="4" Height="20" VerticalAlignment="Center" Grid.ColumnSpan="3" />
            <CheckBox Name="CheckBoxAvailable" Grid.Column="2" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="3"/>
            <TextBox Name="TextBoxDescription" Grid.Column="2" Grid.Row="6" Height="42" VerticalAlignment="Center" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
            <ComboBox Name="ComboBoxHotel" Grid.Column="2" Grid.Row="8" Height="20" VerticalAlignment="Center" Grid.ColumnSpan="2"/>

            <Button Name="ButtonCreateHotel" Click="ButtonCreateHotel_Click" Content="Create new hotel" Margin="10,0" Grid.Column="4" Grid.Row="8" />
            <Button Name="ButtonSubmit" Click="ButtonSubmit_Click" Content="Add" Height="23" VerticalAlignment="Center" Grid.Column="3" Grid.Row="10" />

        </Grid>

        <DataGrid x:Name="DataGridTours" SelectionMode="Single"  HorizontalAlignment="Center"  AutoGenerateColumns="False" Width="800" Grid.ColumnSpan="7" Grid.RowSpan="2" Grid.Row="1" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" Header="ID" x:Name="id" IsReadOnly="True" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Name}" Header="Name" x:Name="name" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Mileage}" Header="Mileage" x:Name="mileage" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Transfer}" Header="Transfer" x:Name="transfer" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding AviaCost}" Header="Avia cost" x:Name="aviacost" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Available}" Header="Available"  x:Name="available" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Description}" Header="Description" x:Name="description" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Country}" Header="Country" x:Name="country" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding City}" Header="City" x:Name="city" Width="Auto"></DataGridTextColumn>
                
                <DataGridTemplateColumn Header="Hotel info">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Details" Click="btn_ShowHideDetails_hotel" CommandParameter="{Binding id}"></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Edit">
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate>
                            <Button Content="Edit" Click="btn_edit" CommandParameter="{Binding id}"></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Delete">
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate>
                            <Button Content="Delete" Click="btn_delete" ></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Add to basket">
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate>
                            <Button Content="Add" Click="ButtonAddToCart_Click" ></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <TextBlock Name="txt_hotel_details" Text="{Binding id_hotel}" Margin="10" />
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
    </Grid>
</Page>
